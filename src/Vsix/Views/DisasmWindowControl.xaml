<UserControl x:Class="Disasmo.DisasmWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:disasmo="clr-namespace:Disasmo"
             xmlns:utils="clr-namespace:Disasmo.Utils"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <UserControl.DataContext>
        <disasmo:MainViewModel x:Name="MainViewModel"/>
    </UserControl.DataContext>
    
    <UserControl.InputBindings>
        <KeyBinding Key="R" Modifiers="Control" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        <utils:InversedBooleanToVisibilityConverter x:Key="InversedBooleanToVisibility"/>
        <utils:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <utils:BoolToFontUnderlineConverter x:Key="BoolToFontUnderlineConverter"/>

        <SolidColorBrush x:Key="PlainText"/>
        <SolidColorBrush x:Key="FileTabInactiveBorderBrush"/>
        <SolidColorBrush x:Key="NumberLineBrush"/>
        <SolidColorBrush x:Key="CheckBoxBorder"/>
        <SolidColorBrush x:Key="CheckBoxBackground"/>
        <SolidColorBrush x:Key="CheckBoxHoveredBackground"/>
        <SolidColorBrush x:Key="CommentColor"/>

        <SolidColorBrush x:Key="EnvironmentBackground" Color="{DynamicResource ResourceKey=VsColor.EnvironmentBackgroundTexture}"/>
        <SolidColorBrush x:Key="ToolWindowBackground" Color="{DynamicResource ResourceKey=VsColor.ToolWindowBackground}"/>
        <SolidColorBrush x:Key="ToolWindowBorder" Color="{DynamicResource ResourceKey=VsColor.ToolWindowBorder}"/>
        <SolidColorBrush x:Key="HighlightText" Color="{DynamicResource ResourceKey=VsColor.Highlight}"/>
        <SolidColorBrush x:Key="GrayText" Color="{DynamicResource ResourceKey=VsColor.GrayText}"/>
        <SolidColorBrush x:Key="DarkGrayText" Color="{DynamicResource ResourceKey=VsColor.GrayText}" Opacity="0.6"/>
        <SolidColorBrush x:Key="HyperlinkText" Color="{DynamicResource ResourceKey=VsColor.PanelHyperlink}"/>
        <SolidColorBrush x:Key="HighlightHyperlinkText" Color="{DynamicResource ResourceKey=VsColor.Highlight}"/>
        <SolidColorBrush x:Key="DarkHyperlinkText" Color="{DynamicResource ResourceKey=VsColor.PanelHyperlink}" Opacity="0.8"/>
        <SolidColorBrush x:Key="LoadingBackground" Color="{DynamicResource ResourceKey=VsColor.HighlightText}" Opacity="0.125"/>

        <Style TargetType="Button" BasedOn="{StaticResource ResourceKey=VsButtonStyleKey}">
            <EventSetter Event="Loaded" Handler="Button_Loaded"/>
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource ResourceKey=VsCheckBoxStyleKey}">
            <EventSetter Event="Loaded" Handler="CheckBox_Loaded"/>
            <Setter Property="Height" Value="18"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Background" Value="{DynamicResource CheckBoxBackground}"></Setter>
            <Setter Property="BorderThickness" Value="1.5"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="RadioOuter" BorderBrush="{DynamicResource CheckBoxBorder}" BorderThickness="1" Width="16" Height="16" CornerRadius="8" 
                                    VerticalAlignment="Center" IsHitTestVisible="False">
                                <Ellipse x:Name="RadioMark" Fill="Transparent" Width="8" Height="8" Margin="2" Visibility="Collapsed" IsHitTestVisible="False"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" Margin="2,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioMark" Property="Fill" Value="{DynamicResource GrayText}"/>
                                <Setter TargetName="RadioMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioOuter" Property="Background" Value="{DynamicResource CheckBoxHoveredBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ResourceKey=VsComboBoxStyleKey}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource ResourceKey=VsTextBoxStyleKey}">
            <EventSetter Event="Loaded" Handler="TextBox_Loaded"/>
        </Style>
        <Style x:Key="TextBoxWithErrors" TargetType="TextBox" BasedOn="{StaticResource ResourceKey=VsTextBoxStyleKey}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource PlainText}"/>
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{DynamicResource HyperlinkText}"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TabItem">
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TabItem_PreviewMouseLeftButtonDown_FixDoubleTabIssue"/>
            <Setter Property="Foreground" Value="{DynamicResource ResourceKey=VsBrush.FileTabText}"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="IsTabStop" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <TextBlock Margin="8,0,8,0" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Header}"/>
                            <Border x:Name="TabBorder" Background="{DynamicResource ResourceKey=VsBrush.FileTabGradient}" BorderBrush="{DynamicResource ResourceKey=VsBrush.FileTabBorder}" 
                                    BorderThickness="0,0,1,0">
                                <Border x:Name="TabBorderStatusPart" BorderThickness="0,2,0,0" BorderBrush="Transparent" Padding="4,1,4,1">
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource ResourceKey=VsBrush.FileTabSelectedText}"/>
                                <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource ResourceKey=VsBrush.FileTabSelectedGradient}"/>
                                <Setter TargetName="TabBorderStatusPart" Property="BorderBrush" Value="{DynamicResource ResourceKey=VsBrush.FileTabSelectedBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="avalonedit:TextEditor">
            <Setter Property="FontSize" Value="{Binding SettingsViewModel.FontSize}"/>
            <Setter Property="Background" Value="{DynamicResource ToolWindowBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PlainText}"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="WordWrap" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="ShowLineNumbers" Value="True"/>
            <Setter Property="LineNumbersForeground" Value="{DynamicResource NumberLineBrush}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="6,0,0,0" Height="20">
            <CheckBox Content="Local dotnet/runtime repo:" IsChecked="{Binding SettingsViewModel.UseCustomRuntime, Mode=TwoWay}"/>
            <Grid>
                <TextBox Text="{Binding SettingsViewModel.PathToLocalCoreClr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding SettingsViewModel.UseCustomRuntime}" Width="150"/>
                <Button Command="{Binding SettingsViewModel.BrowseCommand}" Content="..." 
                        MinWidth="44" MinHeight="18" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="1,0,1,0"/>
            </Grid>
            <StackPanel Margin="8,0,0,0" Orientation="Horizontal">
                <TextBlock Text="JIT kind:" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding SettingsViewModel.CustomJits}" SelectedItem="{Binding SettingsViewModel.SelectedCustomJit, Mode=TwoWay}"
                          Margin="4,0,0,0" Width="140" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Command="{Binding RefreshCommand}" Content="Reload"
                    VerticalAlignment="Center" MinWidth="66" Margin="8,0,0,0" BorderThickness="0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="6,0,0,5">
            <TextBlock Foreground="{DynamicResource HighlightText}" Opacity="0.8" FontSize="10">
                <Run Text="Open 'Tools/Options/Keyboard' in VS, find 'Disasmo' command and assign a hotkey for faster iterations! Current one is"/>
                <Run Text="{Binding DefaultHotKey, Mode=OneWay}"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="6,0,0,1" Height="20">
            <CheckBox Content="JitDump" IsChecked="{Binding SettingsViewModel.JitDumpInsteadOfDisasm, Mode=TwoWay}"
                      IsEnabled="{Binding SettingsViewModel.UseCustomRuntime}"/>
            <CheckBox Content="TieredJIT" Margin="4,0,0,0" IsChecked="{Binding SettingsViewModel.UseTieredJit, Mode=TwoWay}"/>
            <CheckBox Content="PGO" Margin="4,0,0,0" IsChecked="{Binding SettingsViewModel.UsePGO, Mode=TwoWay}"/>
            <CheckBox Content="Run" Margin="4,0,0,0" IsChecked="{Binding SettingsViewModel.RunAppMode, Mode=TwoWay}"/>
            <CheckBox Content="Diffable" Margin="4,0,0,0" IsChecked="{Binding SettingsViewModel.Diffable, Mode=TwoWay}"/>
        </StackPanel>

        <TabControl x:Name="TabControl" Grid.Row="4" Background="{DynamicResource ToolWindowBackground}"
                    BorderBrush="{DynamicResource ToolWindowBorder}" BorderThickness="0,1,0,1">
            <TabItem Header="Output">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="442*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--TODO: not finished yet (list of phases to jump)-->
                    <Grid Width="200" Visibility="Collapsed" Grid.ColumnSpan="2" Margin="0,0,594,0" Grid.RowSpan="2">
                        <TextBlock Text="JIT phases:" Margin="4"/>
                        <ListBox ItemsSource="{Binding JitDumpPhases}" Margin="0,0,1,0" BorderThickness="0" SelectionMode="Single" HorizontalContentAlignment="Stretch"
                                 ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding .}" Height="19" FontSize="11" Margin="-5,-1,-4,-1"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}"/>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                    <!-- -->
                    
                    <avalonedit:TextEditor Grid.Column="1" x:Name="OutputEditor" PreviewMouseWheel="AvalonEdit_MouseWheel" Grid.RowSpan="2"/>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Margin="0,1,22,0" Grid.Row="1">
                        <TextBlock HorizontalAlignment="Left">
                            <Hyperlink Command="{Binding OpenInVSCode}">Open in external editor</Hyperlink>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left">
                            <Hyperlink Command="{Binding OpenInVS}">Open in VS editor</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Previous output">
                <Grid>
                    <avalonedit:TextEditor x:Name="OutputEditorPrev"
										   PreviewMouseWheel="AvalonEdit_MouseWheel"/>
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,6,22,0">
                        <Hyperlink Command="{Binding RunDiffWithPrevious}">Show diff</Hyperlink>
                    </TextBlock>
                </Grid>
            </TabItem>

            <TabItem Header="Flowgraph">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="{DynamicResource ToolWindowBackground}">
                        <CheckBox IsEnabled="{Binding SettingsViewModel.UseCustomRuntime}" Margin="6,6,0,0" Content="Enable flowgraphs (toggles JitDump)" 
                                  IsChecked="{Binding SettingsViewModel.FlowgraphEnable, Mode=TwoWay}"/>
                        <TextBlock Foreground="{DynamicResource GrayText}" Margin="6,4,0,6">
                            <Run Text="Hit 'Reload' button to build it. Also, check 'Output' tab for errors if any."/>
                            <LineBreak/>
                            <Run Text="NOTE: graphs aren't rendered for single-block functions."/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Margin="0,6,6,0" HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Top">
                        <Hyperlink RequestNavigate="OnOpenFolderWithFlowGraphs" NavigateUri="{Binding SelectedPhase.DotFileUrl}">
                            Open folder with these graphs
                        </Hyperlink>
                    </TextBlock>

                    <ScrollViewer Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Image Source="{Binding SelectedPhase.ImageUrl}" Stretch="None"/>
                    </ScrollViewer>

                    <Grid Grid.Row="1" Grid.Column="1"
                          Visibility="{Binding IsPhasesLoading, Converter={StaticResource BooleanToVisibility}}"
                          Background="{DynamicResource LoadingBackground}">

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <ProgressBar IsIndeterminate="True" Width="340" Height="20"/>
                            <TextBlock Foreground="{DynamicResource PlainText}" Text="{Binding PhaseLoadingPhrase}" TextAlignment="Center" Margin="0,8,0,0" FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-->What about the left side scrollbar? It requires a bunch of template code for its own list box implementation<-->
                    <ListBox Background="{DynamicResource ToolWindowBackground}" BorderThickness="1" BorderBrush="{DynamicResource ToolWindowBorder}"
                             ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                             Grid.Row="1" ItemsSource="{Binding FlowgraphPhases}" SelectedItem="{Binding SelectedPhase}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Foreground="{DynamicResource PlainText}"
                                               FontWeight="{Binding IsInitialized, Converter={StaticResource BoolToFontWeightConverter}}">
                                        <Run Text="{Binding Ordinal}"/><Run Text="."/>
                                    </TextBlock>

                                    <TextBlock Foreground="{DynamicResource PlainText}" Text="{Binding Name}" Margin="32,0,0,0"
                                               TextDecorations="{Binding IsInitialPhase, Converter={StaticResource BoolToFontUnderlineConverter}}" 
                                               FontWeight="{Binding IsInitialized, Converter={StaticResource BoolToFontWeightConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Settings" DataContext="{Binding SettingsViewModel}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Margin="6,4,0,0" Text="Some features work only with locally built dotnet" 
                                   Visibility="{Binding UseCustomRuntime, Converter={StaticResource InversedBooleanToVisibility}}"/>
                        <StackPanel Margin="6,6,0,0" Orientation="Horizontal">
                            <TextBlock Text="Font size:"/>
                            <TextBox Margin="4,0,0,0" Width="32" Padding="0,-1,0,0" Style="{StaticResource TextBoxWithErrors}">
                                <TextBox.Text>
                                    <Binding Path="FontSize" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <utils:ValidationRuleMinMaxInt Min="8" Max="50"></utils:ValidationRuleMinMaxInt>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <TextBlock Margin="8,0,0,0" Text="Use CTRL+Mouse wheel inside Output to change it" Foreground="{DynamicResource DarkGrayText}"/>
                        </StackPanel>
                        <CheckBox Content="Show comments in asm" Margin="6,4" IsChecked="{Binding ShowAsmComments, Mode=TwoWay}"/>
                        <CheckBox Content="Use TieredCompilation" Margin="6,3" IsChecked="{Binding UseTieredJit, Mode=TwoWay}"/>
                        <CheckBox Content="Disable LightBulb integration" Margin="6,3" IsChecked="{Binding DisableLightBulb, Mode=TwoWay}"/>
                        <CheckBox Content="Use unloadable context" Margin="6,3" IsChecked="{Binding UseUnloadableContext, Mode=TwoWay}"/>
                        <CheckBox Content="Use JitDump instead of JitDisasm" IsEnabled="{Binding UseCustomRuntime}" IsChecked="{Binding JitDumpInsteadOfDisasm, Mode=TwoWay}" Margin="6,3"/>
                        <CheckBox Content="Don't guess project's TargetFramework" Margin="6,3" IsChecked="{Binding DontGuessTargetFramework, Mode=TwoWay}"/>
                        <CheckBox IsEnabled="{Binding UseCustomRuntime}" Margin="6,3" IsChecked="{Binding PrintInlinees, Mode=TwoWay}">
                            <CheckBox.Content>
                                <TextBlock>
                                    <Run Text="Use Print-Inlinees instead of JitDisasm"/>
                                    <Run Foreground="{DynamicResource DarkGrayText}" Text="Prints a tree of inlining decisions for a specific method"/>
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>
                        <StackPanel Margin="6,3,0,0">
                            <CheckBox IsChecked="{Binding RunAppMode, Mode=TwoWay}" VerticalAlignment="Bottom">
                                <TextBlock TextWrapping="Wrap">
                                <Run Text="Use 'Run current app' mode"/>
                                </TextBlock>
                            </CheckBox>
                            <TextBlock TextWrapping="Wrap" Margin="19,0,0,0">
                                <Run Foreground="{DynamicResource DarkGrayText}" 
                                     Text="Normally, Disasmo creates an AssemblyLoadContext, finds the specified method and precompiles it. In this mode it will just execute the current app (must be a ConsoleApp) - make sure your method is invoked (and is not inlined). Useful for PGO-related experiments."/>
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Margin="6,6,0,0" Text="Reload strategy:"/>
                        <StackPanel Margin="26,0,0,0">
                            <RadioButton IsChecked="{Binding UseDotnetPublishForReload, Mode=TwoWay}" Margin="0,4,0,0" >
                                <TextBlock TextWrapping="Wrap" Margin="2,0,0,0">
                                    <Run Text="dotnet publish"/>
                                    <Run Foreground="{DynamicResource DarkGrayText}" Text="Slow, but works in complex scenarios"/>
                                </TextBlock>
                            </RadioButton>
                            <RadioButton IsChecked="{Binding UseDotnetBuildForReload, Mode=TwoWay}" Margin="0,6,0,0">
                                <TextBlock TextWrapping="Wrap"  Margin="2,0,0,0">
                                    <Run Text="dotnet build"/>
                                </TextBlock>
                            </RadioButton>
                            <CheckBox Margin="20,3,0,2" IsChecked="{Binding UseNoRestoreFlag, Mode=TwoWay}">
                                <TextBlock>
                                    <Run Text="Use --no-restore --no-dependencies flag"/>
                                    <Run Foreground="{DynamicResource DarkGrayText}" Text="Makes it faster, but can lead to build issues"/>
                                </TextBlock>
                            </CheckBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="6,6,0,0">
                            <TextBlock Text="Path to Graphviz's dot.exe:"/>
                            <TextBlock Margin="6,0,0,0" Text="Required for flowgraphs" Foreground="{DynamicResource DarkGrayText}"/>
                        </StackPanel>
                        <TextBox Text="{Binding GraphvisDotPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="6,2"/>

                        <TextBlock Text="Custom Environment variables:" Margin="6,12,0,0"/>
                        <TextBox VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="6,0" Height="140" 
                                 FontFamily="Consolas" FontSize="13" AcceptsReturn="True" TextWrapping="NoWrap"
                                 Text="{Binding CustomEnvVars, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,2,0,0">
                            <Run Text="See" Foreground="{DynamicResource DarkGrayText}"/>
                            <Hyperlink Foreground="{DynamicResource DarkHyperlinkText}" RequestNavigate="Hyperlink_OnRequestNavigate"
                                       NavigateUri="https://github.com/dotnet/runtime/blob/main/src/coreclr/jit/jitconfigvalues.h">jitconfigvalues.h</Hyperlink>
                            <Run Text="and" Foreground="{DynamicResource DarkGrayText}"/>
                            <Hyperlink Foreground="{DynamicResource DarkHyperlinkText}" RequestNavigate="Hyperlink_OnRequestNavigate"
                                       NavigateUri="https://github.com/dotnet/runtime/blob/main/src/coreclr/inc/clrconfigvalues.h">clrconfigvalues.h</Hyperlink>
                            <Run Text="(all of them must be prefixed with 'DOTNET_')" Foreground="{DynamicResource DarkGrayText}"/>
                            <!-- TODO: implement comments -->
                            <!--LineBreak/>
                            <Run Text="You can use '//' to add comments" Foreground="Gray" /-->
                        </TextBlock>

                        <TextBlock Text="crossgen2 arguments:" Margin="6,12,0,0"/>
                        <TextBox VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="6,0"
                                 Height="90" FontFamily="Consolas" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap"
                                 IsEnabled="{Binding UseCustomRuntime}" Text="{Binding Crossgen2Args, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,2,0,0">
                            <Run Text="See" Foreground="{DynamicResource DarkGrayText}"/>
                            <Hyperlink Foreground="{DynamicResource DarkHyperlinkText}" 
                                       NavigateUri="https://github.com/dotnet/runtime/blob/main/src/coreclr/tools/aot/crossgen2/Crossgen2RootCommand.cs#L16"
                                       RequestNavigate="Hyperlink_OnRequestNavigate">Crossgen2RootCommand.cs#L16</Hyperlink>
                        </TextBlock>

                        <TextBlock Text="ILC (NativeAOT) arguments (experimental support in Disasmo):" Margin="6,16,0,3"/>
                        <TextBox VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="6,0,6,8"
                                 Height="120" FontFamily="Consolas" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap"
                                 IsEnabled="{Binding UseCustomRuntime}" Text="{Binding IlcArgs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="S.R.Intrinsics">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Margin="6,6,0,0">
                        <TextBlock Foreground="{DynamicResource DarkGrayText}" Text="Enter mnemonics to find corresponding System.Runtime.Intrinsics APIs" Grid.ColumnSpan="2"/>
                        <TextBlock Foreground="{DynamicResource DarkGrayText}" Text="E.g. '_mm_add_epi8'"/>
                        <TextBox Width="450" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,4,4,0"
                                 Text="{Binding IntrinsicsViewModel.Input, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="2" ItemsSource="{Binding IntrinsicsViewModel.Suggestions}" BorderBrush="{DynamicResource ToolWindowBorder}" Background="{DynamicResource ToolWindowBackground}" 
                             Margin="0,6,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,3">
                                    <TextBox Text="{Binding Comments}" Background="Transparent" FontFamily="Consolas" Foreground="{DynamicResource CommentColor}" FontSize="14" 
                                             BorderThickness="0" IsReadOnly="True"/>
                                    <TextBox Text="{Binding Method}" Background="Transparent" FontFamily="Consolas" Foreground="{DynamicResource PlainText}" FontWeight="Medium" 
                                             FontSize="14"  BorderThickness="0" IsReadOnly="True"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="2" Visibility="{Binding IntrinsicsViewModel.IsBusy, Converter={StaticResource BooleanToVisibility}}" Margin="0,6,0,0"
                          Background="{DynamicResource LoadingBackground}">
                        <ProgressBar IsIndeterminate="True" Width="230" Height="20"/>
                        <TextBlock Foreground="{DynamicResource PlainText}" Text="{Binding IntrinsicsViewModel.LoadingStatus}" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Margin="0,60,0,0" FontSize="14"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="5" Background="{DynamicResource EnvironmentBackground}">
            <StatusBarItem>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="2,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" IsEnabled="{Binding SettingsViewModel.RunAppMode}" Text="Overridden JitDisasm:"/>
                        <TextBox Margin="4,2" Width="170" IsEnabled="{Binding SettingsViewModel.RunAppMode}"
                                 Text="{Binding SettingsViewModel.OverridenJitDisasm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Margin="4,0,0,0" VerticalAlignment="Center" IsEnabled="{Binding SettingsViewModel.RunAppMode}">
                            <Run Text="TargetFramework:"/>
                        </TextBlock>
                        <TextBox Margin="4,2" Width="90" 
                                 Text="{Binding SettingsViewModel.OverridenTargetFramework, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Disasmo v."/>
                        <TextBlock>
                            <Hyperlink Foreground="{DynamicResource HighlightHyperlinkText}" RequestNavigate="OnOpenReleaseNotes" 
                                       NavigateUri="https://github.com/EgorBo/Disasmo/blob/main/RELEASE_NOTES.md">
                                <TextBlock Text="{Binding CurrentVersion}"/>
                            </Hyperlink>
                            <Hyperlink Foreground="{DynamicResource HighlightHyperlinkText}" RequestNavigate="OnOpenReleaseNotes" 
                                       NavigateUri="https://github.com/EgorBo/Disasmo/blob/main/RELEASE_NOTES.md">
                                <TextBlock Text="(new available)"
                                           Visibility="{Binding UpdateIsAvailable, Converter={StaticResource BooleanToVisibility}}"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <StackPanel Orientation="Vertical" Margin="2,2,2,0">
                    <TextBlock Text="{Binding StopwatchStatus}" HorizontalAlignment="Right"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                        <TextBlock Margin="8,0,2,0">
                            <Hyperlink RequestNavigate="OnOpenLogs" NavigateUri="logs">Open logs</Hyperlink>
                        </TextBlock>
                        <TextBlock Margin="8,0,0,0">
                            <Hyperlink RequestNavigate="OnClearLogs" NavigateUri="clear logs">Clear logs</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <Grid Grid.RowSpan="99" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibility}}" Background="{DynamicResource LoadingBackground}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Width="240" Height="22"/>
                    <TextBlock MaxWidth="600" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Margin="0,4,0,0" FontSize="14" Text="{Binding LoadingStatus}" Foreground="{DynamicResource PlainText}"/>
                </StackPanel>
                <Button Width="50" Height="20" Content="Cancel" Margin="6,0,0,0" VerticalAlignment="Top"
                        BorderBrush="{DynamicResource CheckBoxBorder}" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>